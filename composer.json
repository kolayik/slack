{
    "name": "kolayik/slack",
    "description": "A simple PHP package for sending messages to Slack, with a focus on ease of use and elegant syntax.",
    "keywords": ["laravel", "slack"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kousha",
            "email": "kousha.ghodsizad@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~7.0|~6.0|~5.0|~4.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.2.*",
        "mockery/mockery": "0.9.*"
    },
    "suggest": {
        "Kolayik/slack-laravel": "Required for Laravel support",
        "nexylan/slack-bundle": "Required for Symfony bundle support"
    },
    "autoload": {
        "psr-4": {
            "Kolayik\\Slack\\": "src/"
        }
    },
    "minimum-stability": "stable"
}
